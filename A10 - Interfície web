#include <WiFi.h>
#include <WebServer.h>

const char* ssid = "JesusiPhone";   
const char* password = "11111111";

WebServer server(80);
const int ledPin = 2;

void handleRoot() {
  String html = "<h1>Control LED ESP32</h1>";
  html += "<a href='/on'><button>ON</button></a>";
  html += "<a href='/off'><button>OFF</button></a>";
  html += "<a href='/blink'><button>BLINK</button></a>";
  server.send(200, "text/html", html);
}

void handleOn() {
  digitalWrite(ledPin, HIGH);
  Serial.println("LED enc√®s.");
  server.send(200, "text/html", "LED ON");
}

void handleOff() {
  digitalWrite(ledPin, LOW);
  Serial.println("LED apagat.");
  server.send(200, "text/html", "LED OFF");
}

void handleBlink() {
  Serial.println("Inici parpelleig LED");
  for (int i = 0; i < 5; i++) {
    digitalWrite(ledPin, HIGH);
    delay(300);
    digitalWrite(ledPin, LOW);
    delay(300);
  }
  Serial.println("Fi parpelleig LED");
  server.send(200, "text/html", "LED BLINK");
}

void setup() {
  pinMode(ledPin, OUTPUT);
  Serial.begin(115200);
  Serial.println("Iniciant ESP32...");

  WiFi.begin(ssid, password);
  Serial.print("Connectant a la WiFi ");
  Serial.println(ssid);

  while (WiFi.status() != WL_CONNECTED) {
    delay(500);
    Serial.print(".");
  }

  Serial.println("\nWiFi connectada!");
  Serial.print("IP del servidor web: ");
  Serial.println(WiFi.localIP());  
  server.on("/", handleRoot);
  server.on("/on", handleOn);
  server.on("/off", handleOff);
  server.on("/blink", handleBlink);

  server.begin();
  Serial.println("Servidor web iniciat");
}

void loop() {
  server.handleClient();
}
