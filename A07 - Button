#define BUTTON_PIN 13 

int counter = 0;        //Comptador
int lastState = HIGH;   //Estat anterior del botó

void setup() {
  Serial.begin(9600);
  pinMode(BUTTON_PIN, INPUT_PULLUP); 
}

void loop() {
  int currentState = digitalRead(BUTTON_PIN);

  //Detecta quan es prem el boto
  if (lastState == HIGH && currentState == LOW) {
    counter++;
    Serial.print("Pulsació detectat, Comptador = ");
    Serial.println(counter);
  }

  lastState = currentState; //Actualitza l'estat
}
